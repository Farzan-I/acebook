<div class="whole-page">
  <div>
    <div class="main-title">
      <h1>Login</h1>
    </div>

    <div class="grey-div login-signup">

      {{#if error}}
        <div class="error">
          <p>{{error}}</p>
        </div>
      {{/if}}

      <form id="new-session-form" action="/sessions" method="post">

        <label for="email">Email: </label>
        <input class="input" id="email" type="email" name="email" value="">

        <label for="password">Password: </label>
        <input class="input" id="password" type="password" name="password" value="">

        <input class="login-signup-submit" id="login-button" type="submit" value="Login">

      </form>
    </div>
  </div>
</div>
