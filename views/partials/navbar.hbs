<!-- Navbar -->
<div class="w3-top">
 <div class="w3-bar w3-theme-d2 nav-bgc w3-left-align w3-medium border">
  {{#if session}}
  <a href="/posts">
    <img class="logo w3-bar-item" src="../images/acebook_logo.png" height="60" width="60" >
  </a>
  {{else}}
  <a href="/sessions/new">
    <img class="logo w3-bar-item" src="../images/acebook_logo.png" height="60" width="60" >
  </a>
  {{/if}}
  <div class="w3-dropdown-hover w3-hide-small">
  </div>

  {{#if session}}
    <form action='/sessions?_method=DELETE' method='POST'>
      <input id="logout" class="active w3-bar-item w3-button w3-hide-small w3-right w3-padding-medium w3-hover-white w3-round-xxlarge" type="submit" value="Log Out">
    </form>

    <form action='/users' method='Get'>
      <input id="usersBtn" class="active w3-bar-item w3-button w3-hide-small w3-right w3-padding-medium w3-hover-white w3-round-xxlarge" type="submit" value="Users">
    </form>

    <form action='/profile/{{session._id}}' method='Get'>
      <input id="profileBtn" class="active w3-bar-item w3-button w3-hide-small w3-right w3-padding-medium w3-hover-white w3-round-xxlarge" type="submit" value="Profile">
    </form>

    <form action='/posts' method='Get'>
      <input class="active w3-bar-item w3-button w3-hide-small w3-right w3-padding-medium w3-hover-white w3-round-xxlarge" type="submit" value="Home">
    </form>
  {{else}}
    <form action='/users/new' method='Get'>
      <input class="active w3-bar-item w3-button w3-hide-small w3-right w3-padding-medium w3-hover-white w3-round-xxlarge" type="submit" value="Sign-up">
    </form>

    <form action='/sessions/new' method='Get'>
      <input class="active w3-bar-item w3-button w3-hide-small w3-right w3-padding-medium w3-hover-white w3-round-xxlarge" type="submit" value="Login">
    </form>
  {{/if}}
 </div>
</div>
 
<div class="header">
  <img class="logo" src="" height="40" width="40" >
  <div class="header-right">
  </div>
</div>